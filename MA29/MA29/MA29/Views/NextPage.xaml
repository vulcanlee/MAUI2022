<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MA29.Views.NextPage"
             Title="下一頁"
             xmlns:viewmodel="clr-namespace:MA29.ViewModels"
             x:DataType="viewmodel:NextPageViewModel"
             BackgroundColor="LightGreen"
             NavigationPage.HasBackButton="False"
             NavigationPage.TitleIconImageSource="outputonlinepngtools.png">

  
  <VerticalStackLayout>
    <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    <Button Text="返回" Command="{Binding GoBackCommand}"/>
  </VerticalStackLayout>
</ContentPage>
