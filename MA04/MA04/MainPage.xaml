<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MA04.MainPage"
             Title="問安 1 使用 Code Behind">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="姓氏"
                FontSize="14"/>
            <Entry
                x:Name="entry姓氏"/>

            <Label
                Text="名字"
                FontSize="14"/>
            <Entry
                x:Name="entry名字"/>

            <Button
                x:Name="btnSayHello"
                Text="問安"
                Clicked="btnSayHello_Clicked"
                />

            <Label
                x:Name="labelHello"
                FontSize="24" TextColor="Red"/>
        
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
