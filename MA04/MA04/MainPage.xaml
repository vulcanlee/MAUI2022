<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MA04.MainPage"
             Title="問安 1 使用 Code Behind">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="姓氏"
                FontSize="14"/>
            <Entry
                x:Name="entry姓氏"
                TextChanged="entry姓氏_TextChanged"/>

            <Label
                Text="名字"
                FontSize="14"/>
            <Entry
                x:Name="entry名字"
                TextChanged="entry名字_TextChanged"/>

            <Button
                x:Name="btnSayHello"
                Text="問安"
                Clicked="btnSayHello_Clicked"
                />

            <!--這裡將會動態顯示輸入的全名-->
            <Label
                x:Name="labelFullName"
                FontSize="24" TextColor="Green"/>

            <Label
                x:Name="labelSayHello"
                FontSize="24" TextColor="Red"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
