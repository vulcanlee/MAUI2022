<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MA08.MainPage"
             xmlns:viewmodel="clr-namespace:MA08"
             x:DataType="viewmodel:MainPageViewModel"
             Title="問安 5 使用 CommunityToolkit.MVVM">

    <ContentPage.BindingContext>
        <viewmodel:MainPageViewModel/>
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="姓氏"
                FontSize="14"/>
            <Entry
                Text="{Binding LastName}"/>

            <Label
                Text="名字"
                FontSize="14"/>
            <Entry
                Text="{Binding FirstName}"/>

            <Button
                Text="問安"
                Command="{Binding GenerateSayHelloCommand}"
                />

            <!--這裡將會動態顯示輸入的全名-->
            <Label
                Text="{Binding FullName}"
                FontSize="24" TextColor="Green"/>

            <!--這裡將會於按下按鈕之後，才會顯示問安文字-->
            <Label
                Text="{Binding SayHello}"
                FontSize="24" TextColor="Red"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
